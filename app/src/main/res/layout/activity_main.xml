<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.byui.cs246.scripturereference.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book"
        android:id="@+id/txtBook"
        android:layout_alignBottom="@+id/etxtBook"
        android:layout_alignLeft="@+id/txtVerse"
        android:layout_alignStart="@+id/txtVerse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtBook"
        android:hint="@string/book"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtChapter"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/etxtBook"
        android:layout_alignLeft="@+id/etxtBook"
        android:layout_alignStart="@+id/etxtBook"
        android:hint="@string/chapter" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtVerse"
        android:hint="@string/verse"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/etxtChapter"
        android:layout_alignStart="@+id/etxtChapter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapter"
        android:id="@+id/txtChapter"
        android:layout_alignBottom="@+id/etxtChapter"
        android:layout_alignLeft="@+id/txtVerse"
        android:layout_alignStart="@+id/txtVerse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verse"
        android:id="@+id/txtVerse"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_alignBottom="@+id/etxtVerse"
        android:layout_toLeftOf="@+id/etxtVerse"
        android:layout_toStartOf="@+id/etxtVerse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:id="@+id/button"
        android:layout_below="@+id/etxtVerse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:onClick="shareScripture" />
</RelativeLayout>
